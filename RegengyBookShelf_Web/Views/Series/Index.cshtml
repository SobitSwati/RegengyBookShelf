@model List<SeriesDto>
<br />
<div class="container p-4 border">
	<div class="row pb-2">
		<div class="col">
			<h1 class="text-primary">Series List</h1>
		</div>
		<div class="col text-end pt-1">
			<a asp-controller="Series" asp-action="AddSeries" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Add New Series</a>
		</div>
	</div>

	<table class="table">
		<thead>
			<tr>
				<th>
					Series Name
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Name</td>
					<td>
						<a asp-controller="Series" asp-action="UpdateSeries" asp-route-villaNo="@item.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
						<a asp-controller="Series" asp-action="DeleteSeries" asp-route-villaNo="@item.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
					</td>
				</tr>
			}
		</tbody>
	</table>

</div>