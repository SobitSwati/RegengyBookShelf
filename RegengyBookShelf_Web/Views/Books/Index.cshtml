@model List<BooksDto>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Books List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller= "Books" asp-action= "AddBook" class= "btn btn-primary">
               <i class="bi bi-plus-circle"></i> Add New Book
            </a>
        </div>
    </div>
    <br /><br /><br />

	<table class="table">
		<thead>
			<tr>
				<th>Title</th>
				<th>ISBN</th>
				<th>Author</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Title</td>
					<td>@item.ISBN</td>
					<td>@item.Author</td>
					<td>
						<a asp-controller="Books" asp-action="Details" asp-route-bookId="@item.Id" class="btn btn-primary"><i class="bi bi-info-circle" title="Details"></i></a>
						<a asp-controller="Books" asp-action="UpdateBook" asp-route-bookId="@item.Id" class="btn btn-success"><i class="bi bi-pencil-square" title="Update"></i></a>
						<a asp-controller="Books" asp-action="DeleteBook" asp-route-bookId="@item.Id" class="btn btn-danger"><i class="bi bi-trash-fill" title="Delete"></i></a>
					</td>
				</tr>
			}
		</tbody>
	</table>

</div>